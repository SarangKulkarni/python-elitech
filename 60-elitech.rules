# udev rules for Elitech devices

# Actions need to be undertaken only when USB devices are added or bound
ACTION=="remove",   GOTO="elitech_end"
SUBSYSTEMS=="usb*", GOTO="elitech_usb"
SUBSYSTEM=="*",     GOTO="elitech_end"

# For USB devices, Elitech often uses Vendor Ids 0x04d8 and 0x0416
LABEL="elitech_usb"
KERNEL=="hidraw*", ATTRS{idVendor}=="04d8", GROUP="dialout", TAG+="elitech"
KERNEL=="hidraw*", ATTRS{idVendor}=="0416", GROUP="dialout", TAG+="elitech"

# New versions of Elitech RC-5 also use hid. S/N: EFE247xxxxxx device uses hid and has vid:pid of 246c:9001. 
# This device appears as FMSH MSC+HID.
KERNEL=="hidraw*", ATTRS{idVendor}=="246c", ATTR{idProduct}=="9001", GROUP="dialout", TAG+="elitech", 

# End of rule files
LABEL="elitech_end"
